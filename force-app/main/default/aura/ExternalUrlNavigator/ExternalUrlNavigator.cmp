<aura:component controller="DocumentChecklistController"
                implements="force:appHostable,force:hasRecordId,lightning:isUrlAddressable,flexipage:availableForAllPageTypes"
                access="global">
    <!-- Attributes -->
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="pageReference" type="Object" />
    
    <!-- Initialization handler -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <!-- Workspace API for opening tabs -->
    <lightning:workspaceAPI aura:id="workspace" />
</aura:component>