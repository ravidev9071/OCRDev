<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <section class="sec-one-1" style="background-image: url('/resource/MaciImages/img/pharmacy.jpg');background-size: cover;background-repeat: no-repeat;background-position: center;">
        <div class="section-content container-fluid px-5" style="background: transparent;height:100%;">
            <div class="card-header border-0 crd-hdr-m px-0 pt-1 pb-1"></div>
                <div class="bg-white p-4" style="height: 37vw;padding: 1rem 1rem 11rem 1rem !important;">
                    <div class="row d-flex">
                        <div class="col-md-9 border-end">
                            <h5 class="text-theme fw-lighter">Verify Prescriber and Patient Status</h5>
                            <div class="form-heading mb-0">
                                <p class="mb-0 fw-bold">Prescriber</p>
                            </div>
                            <label for="" class="text-theme text-uppercase fs-6">dr. Prescriber</label>

                       <div class="mt-3">
                        <div class="form-heading">
                            <p class="mb-0 fw-bold">Patient Information</p>
                        </div>
                        <div class="row"> 
                            <div class="col-lg-3 mb-2">
                                <label for="first-name" >First Name</label>
                                <input type="text" name="first-name" id="first-name" value="" placeholder="First Name" class="form-control"></input>
                            </div>
                            <div class="col-lg-1 mb-2">
                                <label for="mi" >M.I.</label>
                                <input type="text" name="mi" id="mi" placeholder="M.I." value="" class="form-control"></input>
                            </div>
                            <div class="col-lg-3 mb-2">
                                <label for="last-name" >Last Name</label>
                                <input type="text" name="last-name" id="last-name" value="" placeholder="Last Name" class="form-control"></input>
                            </div>
                            <div class="col-lg-3 mb-2">
                                <label for="date" >Date of Birth</label>
                                <input type="date" name="dob" id="dob" placeholder="Date of Birth" class="form-control"></input>
                            </div>

                        </div>   
                        <div class="space"></div>
                            <div class="row my-2">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <a class="btn btn-secondary text-uppercase rounded-0"> <i class="fa fa-arrow-left"></i> previous</a>
                                    </div>
                                    <div>
                                        <a class="btn btn-primary-m text-uppercase">continue</a>
                                    </div>
                                </div>
                            </div>
                        
                       </div>
                    </div>
                    <div class="col-md-3 ps-4">
                        <h5 class="text-theme mb-4 fw-bold"><i class="fa fa-info pe-2"></i> Information</h5>
                        <div class="d-flex align-items-center mb-2">
                            <div>
                                <i class="fa fa-check-circle text-success pe-2 fs-4"></i>
                            </div>
                            <div>
                                <p class="text-muted font-sm mb-0">Prescriber is certified in REMS</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div>
                                <i class="fa fa-check-circle text-success pe-2 fs-4"></i>
                            </div>
                            <div>
                                <p class="text-muted font-sm mb-0">Patient is enrolled in REMS</p>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="card-footer border-0 crd-hdr-m py-4">
                    <div class="row">
                        <div class="col-lg-6"></div>
                        <div class="col-lg-6"></div>
                    </div>
                </div>
        </div>
       
    </section>



	
</aura:component>