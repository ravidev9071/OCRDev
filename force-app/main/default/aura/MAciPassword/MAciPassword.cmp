<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<section class="sec-one-1" style="background-image: url('/resource/MaciImages/img/prescriber.jpg');;background-size: cover;background-repeat: no-repeat; height:100vh;">
        <div class="container-fluid px-5">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card p-0 rounded-0 border-0">
                        <div class="card-header border-0 crd-hdr-m">
                            <div class="row d-flex justify-content-center align-items-center">
                                <div class="col-lg-5">
                                    <div class="row">
                                        <div class="col-lg-11 col-sm col-10">
                                            <h5 class="heading mb-0 fs-3 fw-lighter mt-n1"><i class="fa fa-file-text pe-1"></i>
                                                Prescriber Certification</h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-7">
                                    
                                <div class="progressbar">
                                        <div class="progress" id="progress"></div>
                                        
								    	<div class="progress-block">
                                        	<div class="progress-step"></div>
                                            <span>PRESCRIBER INFORMATION</span>
                                        </div>
                                        <div class="progress-block">
                                              <div class="progress-step"></div>
                                            <span>PRIMARY OFFICE PRACTICE/CLINICAL INFORMATION</span>
                                        </div>
                                        <div class="progress-block">
                                            <div class="progress-step"></div>
                                            <span>SECONDARY OFFICE PRACTICE/CLINICAL INFORMATION</span>
                                        </div>
                                         <div class="progress-block">
                                            <div class="progress-step progress-step-active"></div>
                                             <span  class="text-theme"><em>PASSWORD</em></span>
                                         </div>
                                         <div class="progress-block">
                                        	<div class="progress-step"></div>
                                            <span>AGREEMENT</span>
                                        </div>
                                        <div class="progress-block">
                                        	<div class="progress-step last-step"></div>
                                            <span>COMPLETE</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body px-4 llc-dv">

                            <div class="row">
                                <div class="col-lg-12">
                                    <h5 class="fw-bold">Password</h5>
                                </div>
                            </div>
                            <div class="row pharma-frm" style="padding-bottom: 1rem;">
                                <div class="col-lg-5">
                                    <div class="form-group">
                                        <div class="row">
                                        
                                            <div class="col-lg-1 px-0 col-sm col-1">
                                                <i class="fa fa-user-circle pull-right pt-2 mt-4"></i>
                                            </div>
                                            <div class="col-lg-10 col-sm col-11">
                                                <label class=" text-theme">Please provide your username</label>
                                                <input name="text-
                                                clinic-name" class="form-control"
                                                       placeholder="Username"></input>
                                            </div>
                                        </div>
                                        <div class="row mt-3">
                                            <div class="col-lg-1 px-0 col-sm col-1">
                                                <img src="{!$Resource.MaciImages + '/img/key.png'}"  alt="key" width="20px" class="imf-fluid pull-right pt-2 w-img-25 mt-4 me-1"></img>
                                               
                                            </div>
                                            <div class="col-lg-10 col-sm col-11 ">
                                                <label class=" text-theme">Please create your password</label>
                                                <div class="d-flex justify-content-end align-items-center">
                                                    <input type="password" name="text-clinic-name" class="form-control" id="password" value="" placeholder="Password"></input>
                                                    <i class="fa fa-eye-slash position-absolute me-3" id="togglePassword"></i>
                                                </div>
                                            </div>
                                            <div class="col-lg-1 px-1 col-sm col-1 ">
                                                <i class="fa fa-info pull-left py-2 pe-3 mt-4 border-end"></i>
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-lg-1 px-0 col-sm col-1"></div>
                                            <div class="col-lg-10 col-sm col-11">
                                                <input name="text-clinic-name" type="password" value="" placeholder="Re-enter Password" class="form-control"></input>
                                                   
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-lg-1 px-0 col-sm col-1">
                                                <div class="pull-right">
                                                    <i class="fa fa-code pt-2 fw-bold"></i>
                                                </div>
                                            </div>
                                            <div class="col-lg-10 col-sm col-11 d-flex align-items-center">
                                                <div class="form-check mt-2">
                                                    <input name="text-loaction" class="form-check-input" type="checkbox"
                                                           value="" id="flexCheckDefault"></input>
                                                    <label class="form-check-label m-0" for="flexCheckDefault">
                                                        Two-Factor Authentication Enabled
                                                    </label>
                                                </div>  
                                                <i class="fa fa-info ms-3 border-end pe-3 py-1"></i>
                                            </div>
                                            <div class="py-4"></div>
                                        </div>
                                      
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer border-0 crd-hdr-m">
                            <div class="row">
                               
                                <div class="">
                                    <a href="agreement" name="button-next"
                                        class="btn btn-primary-m my-2 pull-right rounded-0">NEXT <i
                                            class="fa fa-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</aura:component>